{
  "logging": {
    "logLevel": "info",
    "console": true,
    "gcloud": false
  },
  "firestore": {
    "host": "localhost",
    "port": 1865,
    "projectId": "autoreceipt",
    "ssl": false
  },
  "pubsub": {
    "client": {
      "apiEndpoint": "http://localhost:1866"
    },
    "topics": {
      "pdf": "pdf-generation"
    },
    "subscriptions": {
      "pdf": {
        "topic": "pdf-generation",
        "name": "pdf-gen",
        "retryOnFail": false
      }
    }
  },
  "api": {
    "apiToken": "VGhpcyBpcyBteSBBUEkgdG9rZW4uIElzIGl0IGF3ZXNvbWU=",
    "showError": true
  },
  "paypal": {
    "validateIpn": true,
    "ipnUrl": "https://ipnpb.sandbox.paypal.com/cgi-bin/webscr"
  },
  "locales": [
    { "locale": "fr-CA", "test": "janvier" },
    { "locale": "en-CA", "test": "january" }
  ],
  "providers": {
    "file": {
      "provider": "file-system",
      "fs": {
        "translationsPath": "./translations",
        "templatePath": "./templates",
        "documentPath": "./temp"
      }
    },
    "email": {
      "provider": "sendGrid",
      "sendGrid": {
        "apiKey": "",
        "from": "do-not-reply@autoreceipt.app",
        "replyTo": "no-reply@autoreceipt.app"
      }
    }
  },
  "correspondences": {
    "receipt": {
      "subject": {
        "value": "Thank you for your donation",
        "source": "static"
      },
      "text": {
        "value": "Thank you for you donation to our organization. This is much appreciated.\r\n\r\nYou will find attached to this email your fiscal receipt for the year {{fiscalYear}}.\r\n\r\nThank you again for your donation",
        "source": "inline-template"
      }
    }
  }
}
