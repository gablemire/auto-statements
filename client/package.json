{
  "name": "auto-receipt-client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.11.3",
    "@material-ui/data-grid": "^4.0.0-alpha.19",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/system": "^4.11.3",
    "clsx": "^1.1.1",
    "firebase": "^8.2.7",
    "formik": "^2.2.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.2",
    "yup": "^0.32.8"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "npm run lint && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src/** --ext .js --ext .ts --ext .tsx",
    "prestart": "npm run setup:dev",
    "setup:dev": "node scripts/setup-config.js dev",
    "setup:stg": "node scripts/setup-config.js stg",
    "setup:prd": "node scripts/setup-config.js prd",
    "deploy:stg": "cp ./secrets/stg/.firebaserc ./.firebaserc && cp ./secrets/stg/firebase.json ./firebase.json && npm run setup:stg && npm run build && firebase use auto-receipt-263320 && firebase deploy",
    "deploy:prd": "cp ./secrets/prd/.firebaserc ./.firebaserc && cp ./secrets/prd/firebase.json ./firebase.json && npm run setup:prd && npm run build && firebase use auto-receipt-prod && firebase deploy",
    "import-users:stg": "firebase auth:import ./secrets/stg/users.json",
    "import-users:prd": "firebase auth:import ./secrets/prd/users.json",
    "firebase:init": "firebase login",
    "firebase": "firebase"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^12.7.1",
    "@types/jest": "^26.0.20",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/react-router-dom": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "cross-env": "^7.0.3",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "firebase-tools": "^9.3.0",
    "husky": "^5.0.9",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "typescript": "~4.1.5"
  }
}
